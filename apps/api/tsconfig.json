{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@pixel-flow/database": ["../../packages/database/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "../../packages/database/src/**/*"]
}
